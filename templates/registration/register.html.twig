{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <body class="bg-white font-family-karla h-screen">

<div class="w-full flex flex-wrap">

    <!-- Login Section -->
    <div class="w-full md:w-1/2 flex flex-col">

        <div class="flex justify-center md:justify-start pt-12 md:pl-12 md:-mb-24">
            <a href="{{ path("index") }}" class="bg-vert3 text-white font-bold text-xl p-4">Manu-Crochet</a>
        </div>

        <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
            <p class="text-center text-3xl">Inscris-toi.</p>
            <div class="flex flex-col pt-3 md:pt-8" method="post">

                {{ form_start(registrationForm) }}


                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="text-lg text-rouge3" role="alert">{{ flashError }}</div>
                {% endfor %}

                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">Nom</label>
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' ,
                        'placeholder': 'Dupont'}}) }}
                </div>

                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">Prénom</label>
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' ,
                        'placeholder': 'Amelie'}}) }}
                </div>

                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">Mail</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' , 'placeholder': 'votre@mail.com'}}) }}
                </div>

                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': '*********'}}) }}
                </div>

                <div class="flex flex-row pt-4">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'block border mr-2 my-1 lg:w-5 lg:h-5 md:w-4 md:h-4 w-6 h-6 border-grey-light'} }) }}
                    <label for="email" class="text-lg">J'accepte les conditions d'utilisation du site.</label>
                </div>

                <button type="submit" class="w-full border-2 hover:bg-vert3 transition ease-in duration-200 bg-white border-vert3 text-vert3 hover:text-white text-lg rounded cursor-pointer p-2 mt-8">S'inscrire</button>

                {{ form_end(registrationForm) }}

            </div>
            <div class="text-center pt-12 pb-12">
                <p>Vous avez déjà un compte ? <a href="{{ path("app_login") }}" class="underline font-semibold">connecte-toi !</a></p>
            </div>
        </div>

    </div>

    <!-- Image Section -->
    <div class="w-1/2 shadow-2xl">
        <img class="object-cover w-full h-screen hidden md:block" src="https://images.unsplash.com/photo-1619233985563-fcba75ff25a5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80">
    </div>
</div>

    </body>

{% endblock %}
