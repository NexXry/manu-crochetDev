{% extends 'base.html.twig' %}

{% block title %}Administation{% endblock %}

{% block body %}

    <div class="flex" style="font-family: Arial;" x-data="{ open: true }">
        {% include './components/sidebar.html.twig' %}
        <div class="w-full z-10">
            {% include './components/navbarBack.html.twig' %}

            <div class="body">
                <div class="p-8 h-screen overflow-auto" style="background-color: #E4E5E6;">
                    <div class="main bg-white border-2 border-gray-300 rounded">
                        <div class="rounded-t border-b-2 border-gray-300" style="background-color: #F0F3F5;">
                            <h1 class="p-4">Gestion des achats clients</h1>
                        </div>

                        <div class="p-4">
                            <div class="w-10/12 flex flex-wrap justify-around mx-auto">

                                <div class="overflow-auto mt-2 border-2 border-vert3 w-10/12 h-screen">
                                    {% if client is not empty %}
                                        {% for commande in client %}
                                            <hr>
                                            <div class="my-2 flex flex-col lg:flex-row flex-wrap justify-around ml-5">
                                                <p class="mt-2"><span class="font-bold">ID</span> : {{ commande.id }}</p>
                                                <p class="mt-2"><span class="font-bold">Prix TTC</span> : {{ commande.prixLivraison+commande.totalPrixPrd }}€</p>
                                                <p class="mt-2"><span class="font-bold">Frais livraison</span> : {{ commande.prixLivraison }}€</p>
                                                <p class="mt-2"><span class="font-bold">numéro de suivi</span> : {{ commande.codeLivraison ? commande.codeLivraison : 'pas encore expédier.' }} </p>
                                                <a href="{{ path('detailComm',{id: commande.id}) }}" class="mt-2 lg:mt-0 w-8/12 lg:w-2/12 text-center border-2 border-vert3 text-vert3 rounded px-1 py-2 hover:bg-vert3 hover:text-white">Détail
                                                    commande</a>
                                            </div>
                                            <hr>
                                        {% endfor %}
                                    {% else %}
                                        <p class="text-lg text-red-500 mt-2 text-center">Pas de commande client pour le moment !</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
